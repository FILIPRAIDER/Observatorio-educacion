---
// src/pages/publicaciones/index.astro
import Layout from "../../layouts/Layout.astro";
import ListaPublicaciones from "../../components/publicaciones/ListaPublicaciones.astro";
import { publicaciones } from "../../data/publicaciones";
---

<Layout title="Publicaciones">
  <div class="container mx-auto px-4 py-16 font-poppins flex flex-col gap-2">
    <h1 class="text-3xl md:text-5xl font-bold text-center pb-4">Publicaciones</h1>
    <p class="text-gray-600 text-center text-[12px] md:text-sm mb-6">
      Descubre los últimos análisis y tendencias en el sector educativo.
    </p>

    <ListaPublicaciones publicaciones={publicaciones} />
  </div>
</Layout>
