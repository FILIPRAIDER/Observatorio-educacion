---
// src/layouts/Layout.astro
import Navbar from "../components/layout/Navbar.astro";
import { ViewTransitions } from "astro:transitions";
import "../styles/global.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <title>{title} | Observatorio de la educación</title>
    <ViewTransitions />
  </head>
  <body class="bg-gray-50 relative border border-red-500">
    <!-- Fondo estilizado -->
    <div
      class="absolute inset-0 -z-10 h-full w-full"
      style="background: radial-gradient(55% 85% at 50% 45%, rgba(213,249,255,0.6) 0%, rgba(255,255,255,1) 100%)"
    >
    </div>

    <Navbar />
    <main>
      <slot />
    </main>
    <footer class="bg-gray-100 py-6 mt-12">
      <div class="container mx-auto px-4 text-center text-gray-600">
        &copy; {new Date().getFullYear()} Observatorio de la educación. Todos los
        derechos reservados.
      </div>
    </footer>
  </body>
</html>
