---
import { Image } from "astro:assets";

interface Props {
  titulo: string;
  fecha: string;
  descripcion: string;
  tipoPublicacion?: string;
  imagen?: string;
  slug: string;
}

const {
  titulo,
  fecha,
  descripcion,
  tipoPublicacion,
  imagen = "/placeholder-publicacion.jpg",
  slug,
} = Astro.props;

const fechaFormateada = new Date(fecha).toLocaleDateString("es-ES", {
  day: "numeric",
  month: "long",
});
---

<article
  class="mt-20 md:mt-0 md:mb-0 rounded-[8px] bg-[#828282]/10 p-4 flex flex-col md:flex-row md:gap-4 items-start md:items-center relative md:pl-56 max-h-[310px] w-full h-[330px] md:h-[210px] font-inter"
>
  <!-- Imagen -->
  <div
    class="w-full md:w-[240px] flex-shrink-0 rounded-[8px] md:absolute md:-left-10 -mt-24 md:mt-0"
  >
    <a href={`/publicaciones/${slug}`} astro-transition>
      <Image
        width={240}
        height={152}
        src={imagen}
        alt={`Imagen para ${titulo}`}
        class="object-cover bg-gray-200 md:mt-0 rounded-[8px] mx-auto mb-2 w-[300px] md:w-[240px] h-[180px] md:h-[152px] transition-opacity duration-500 ease-in-out opacity-0"
        onload="this.style.opacity=1;"
        astro-view-transition={`publicacion-${slug}`}
      />
    </a>
  </div>

  <!-- Contenido -->
  <div class="flex-1 space-y-4 md:space-y-2 text-center md:text-left">
    <div
      class="flex flex-col md:flex-row justify-between items-start md:items-center"
    >
      <a href={`/publicaciones/${slug}`} astro-transition>
        <h3
          class="text-[16px] md:text-[20px] text-left font-bold text-[#000000] w-full md:w-[580px] hover:underline line-clamp-2"
        >
          {titulo}
        </h3>
      </a>
      <span class="text-[10px] text-[#828282] font-normal md:ml-4"
        >{fechaFormateada}</span
      >
    </div>

    <p
      class="text-[#828282] font-normal text-left text-[13px] md:text-[14px] line-clamp-3"
    >
      {descripcion}
    </p>
    <div class="text-left">
      {
        tipoPublicacion && (
          <span class="p-2 text-[10px] font-normal bg-blue-200 text-blue-800 px-2 py-1 rounded">
            {tipoPublicacion}
          </span>
        )
      }
    </div>
  </div>
</article>
